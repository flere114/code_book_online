<!DOCTYPE html>
<div id='buttonArea'>
	<input class="btn btn-default" type="submit" name="Create" value="Create" onclick="createFolder()">
	<input class="btn btn-default" type="submit" name="Rename" value="Rename" onclick="updateName()">
	<input class="btn btn-default" type="submit" name="Delete" value="Delete" onclick="removeObject()">
	<input class="btn btn-default" type="submit" name="Cut" value="Cut" onclick="cutFile()">
	<input class="btn btn-default" type="submit" name="Paste" value="Paste" onclick="updatePath()">
	<input class="btn btn-default" type="submit" name="Download" value="Download" onclick="downloadButton()">
	<input class="btn btn-default" type="submit" name="Edit" value="Edit" onclick="editButton()">

	<br/>

</div>


<form id = "editor" class="form-horizontal" role="form" action="/createCode" method="post">
	<textarea id="codeArea" name="codeArea"></textarea>
	<div class="form-group">
		<div class="form-inline">
			<div class="col-sm-8">
				<input type="text" class="form-control" id="codeName" name="codeName" placeholder="名稱">
				<input type="text" class="form-control" id="parent_code_ID" name="parent_code_ID" placeholder="parent or code ID" value="<%=rootID%>" style='display:none;'>
			</div>
		</div>
		<div class="form-inline">
			<div class="col-sm-4" align="right">
				<select class="form-control" name="codeType" id="codeType">
					<option value="1" selected="selected">C/C++</option>
					<option value="2">Java</option>
					<option value="3">Python</option>
				</select>
				<input class="btn btn-primary" type="submit" name="Submit" value="Submit">
				<button id="screenButton" type="button" class="btn btn-default" onclick="fullscreen()">
					<span class="glyphicon glyphicon-resize-full" aria-hidden="true" ></span>
				</button>
			</div>
		</div>
	</div>
</form>

