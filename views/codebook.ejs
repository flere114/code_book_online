<!DOCTYPE html>

<div class="col-md-6" style="height:100%; border-right: 1px solid black; padding-top:15px;">
	<div class="form-inline">
		<div class="col-sm-12">
			<select class="form-control" name="codeType" id="codeType">
			</select>
			<input class="btn btn-default" type="Submit" name="Add" value="Add" onclick="addCode()">
		</div>
	</div>
	<div id="panel" class="col-md-12" style="height:100%;">
	</div>
</div>

<div class="col-md-6" style="height:100%; padding-top:15px;">
	<div style="height:90%">
		<div class="form-inline">
			<div class="col-sm-12">
				<input type="text" class="form-control" id="sectionName" name="sectionName" placeholder="Section Name">
				<input class="btn btn-default" type="Submit" name="Create" value="Create" onclick="addSection()">
			</div>
		</div>

		<div class="col-md-12" style="overflow: auto; height:100%;" >
			<ul id="section"></ul>
		</div>
	</div>
	
	<div class="form-inline">
		<div class="col-sm-8">
			<input type="text" class="form-control" id="codebookName" name="codebookName" placeholder="Codebook Name">
		</div>
		<div class="col-sm-4" align="right">
			<input class="btn btn-primary" type="Submit" name="Submit" value="Submit" onclick="createCodebook()">
		</div>
	</div>
</div> 

<script src="javascripts/codebook.js"></script> 
<link rel="stylesheet" href="/stylesheets/codebook.css"></script>
